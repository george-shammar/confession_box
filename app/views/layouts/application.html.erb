          <h1>The Confession Box</h1>
          <h3>Since 1576.</h3>
        </div>
      </div>
      <div id="main">
        <div class="center">
          <%= yield %>
        </div>
        <div class="leftmenu">
          <div class="nav">
            <ul>
              <li>
                <%= home %>
              </li>
              <li>
                <div>
                  <%= navbar_button_sign_out %>
                  <%= navbar_button_log_in %>
                </div>
              </li>
              <li>
                <div>
                  <p>Signed in as:</p>
                  <%= signed_in_as %>
                </div>
              </li>
              <li>
                <%= new_post_button %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div id="prefooter">
        <div class="particles">
          <h2>Site Statistics/h2>
