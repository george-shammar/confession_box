<p id="notice"><%= notice %></p>

<h1>Confessions</h1><br>
  
    <% @posts.each do |post| %><br>
      <h2><%= link_to post.title, post %></h2>
      <p><%= post.content %></p>
      
      <p class="date">Posted by <%="#{post.user.username}"%> | <%= link_to 'Read more', post %> | <%= like_or_dislike_btn(post) %><%= like_count(post) %> | Comments (comment_count(post)) | <i class="far fa-clock"></i> <%= post.created_at.strftime("%Y/%m/%d") %></p>


    <% end %>
    


