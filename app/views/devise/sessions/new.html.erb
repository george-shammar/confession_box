<div class ="border py-3 mt-3 mx-auto sign-in" style="width: auto;">
<h2 class='color-green'>Log in</h2><br >

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="field">
    <%= f.label :username, class: 'color-white'%><br >
    <%= f.text_field :username, autofocus: true, class:'field' %>
  </div>
  
  <div class="field">
    <%= f.label :email, class: 'color-white'%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:'color-white'%><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'color-white' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>